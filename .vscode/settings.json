{
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.insertSpaces": false,
  "biome.lspBin": "npx",
  "biome.lsp.enable": true,
  "biome.lsp.diagnostics.enable": true,
  "biome.lsp.diagnostics.show": true,
  "biome.lsp.diagnostics.showHints": true,
  "biome.lsp.diagnostics.showWarnings": true,
  "biome.lsp.diagnostics.showErrors": true,
  "biome.enable": true,
  "biome.requireConfiguration": true,
  "biome.lsp.diagnostics.showSource": true,
  "biome.lsp.diagnostics.showUnused": true,
  "biome.lsp.diagnostics.showDeprecated": true
}

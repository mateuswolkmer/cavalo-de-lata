---
import config from '../../content/config/config.json';
import LogoFullSvg from '../../assets/images/logos/logo_full.svg';
import { Button } from '../react/ui/Button';
import { Link } from '../react/ui/Link';

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 w-full m-auto z-50 flex justify-center">
  <div class="flex-1 pt-4 px-20 max-w-page">
    <nav
      class="flex flex-row text-light items-center justify-between p-4 shadow-md bg-primary rounded-xl"
    >
      <div class="flex gap-10">
        <a href="/"><LogoFullSvg /></a>
        <div class="flex gap-5 items-center">
          {
            config.nav.map(nav => (
              <Link currentPath={currentPath} href={nav.link}>
                {nav.title}
              </Link>
            ))
          }
        </div>
      </div>
      <div class="flex items-center gap-4">
        <Link href="/#emergencia" highlight>Solicitar resgate</Link>
        <Button>Doe agora</Button>
      </div>
    </nav>
  </div>
</header>

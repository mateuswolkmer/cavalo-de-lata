---
import config from '../../content/config/config.json';
import Link from './Link.astro';
import Button from './Button.astro';
import LogoFullSvg from '../../assets/images/logos/logo_full.svg';
---

<header class="mt-4 mx-10">
  <nav
    class="w-full bg-primary rounded-xl flex flex-row text-light items-center justify-between px-6 py-2"
  >
    <div class="flex gap-10">
      <a href="/"><LogoFullSvg /></a>
      <div class="flex gap-5 items-center">
        {config.nav.map(nav => <Link href={nav.link}>{nav.title}</Link>)}
      </div>
    </div>
    <div class="flex items-center gap-4">
      <Link href="/" highlight>Solicitar resgate</Link>
      <Button>Doe agora</Button>
    </div>
  </nav>
</header>

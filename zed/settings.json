{
  "languages": {
    "Astro": {
      "language_servers": ["eslint", "astro-ls"],
      "formatter": "prettier",
      "format_on_save": "on"
    }
  },
  "formatter": {
    "prettier": {
      "allowed": true,
      "plugins": ["prettier-plugin-astro"]
    }
  },
  "lsp": {
    "eslint": {
      "settings": {
        "validate": [
          "javascript",
          "javascriptreact",
          "typescript",
          "typescriptreact",
          "astro"
        ],
        "rulesCustomizations": [],
        "run": "onType",
        "nodePath": null,
        "useESLintClass": false,
        "experimental": {
          "useFlatConfig": true
        }
      }
    }
  }
}
